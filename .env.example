# ===========================================
# Firebase Configuration
# Get these from Firebase Console > Project Settings > General
# ===========================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# ===========================================
# Firebase Admin SDK (Server-side)
# Download service account key from Firebase Console > Project Settings > Service Accounts
# Option 1: Paste the entire JSON as a single line
# Option 2: Use individual values below
# ===========================================
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}
FIREBASE_CLIENT_EMAIL=your_service_account_email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ===========================================
# Cloudflare R2 Configuration
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
# ===========================================
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=gianghaison-assets
R2_PUBLIC_URL=https://r2.gianghaison.me

# ===========================================
# Umami Analytics (Optional)
# Self-host: Deploy Umami to Vercel, get these values from Umami dashboard
# Cloud: Sign up at cloud.umami.is
# ===========================================
NEXT_PUBLIC_UMAMI_WEBSITE_ID=your_website_id
NEXT_PUBLIC_UMAMI_SCRIPT_URL=https://your-umami-instance.vercel.app/script.js
